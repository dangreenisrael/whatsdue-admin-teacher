{{#bootstrap-modal}}
    <div class="modal-header">
        <button type="button" {{action 'close'}} class="close">Ã—</button>
        <h4 class="modal-title">Course Name: {{model.course_name}}</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="col-md-12">
                {{input type="text" enter="save" value=model.course_name maxlength="20" class="form-control" size="16" placeholder="Course Name"}}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button  class="btn btn-primary" type="button" {{action 'save'}} >Save</button>
        <button  class="btn btn-danger pull-left" type="button" {{action 'remove'}} >Delete</button>
    </div>
{{/bootstrap-modal}}