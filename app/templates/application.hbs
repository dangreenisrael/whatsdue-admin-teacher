<section id="main">

    <!-- header start -->
    <div class="header-section">
        <div class="pull-left">
            <img id="logo" src="/ember/images/whatsdue-logo.png"/>
            <img {{action "toggleMenu"}} id="menu-toggle" src="/teachers/assets/img/menu.png"/>
            <span>
                WhatsDue Teacher Dashboard for {{user.first_name}} {{user.last_name}}
            </span>
        </div>
        <div class="menu-right ">
            <ul class="notification-menu">
                <li id="invite-users">
                    {{#link-to 'message.email.invite' class="btn btn-default dropdown-toggle"}}
                        Invite Subscribers <i class="fa fa-users"></i>
                    {{/link-to}}
                </li>
                <li>
                    <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-info-circle"></i>
                        {{user.first_name}}
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                        <li><a href="mailto:aaron@whatsdueapp.com"><i class="fa fa-envelope"></i>Email Aaron</a></li>
                        <li><a href="skype:aarontaylor613?call"><i class="fa fa-phone"></i>Skype Aaron</a></li>
                        <li><a href="/logout"><i class="fa fa-sign-out"></i> Log Out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <!-- header end -->



    <!-- main content start-->
    <div class="main-content {{mobileMenu}}" {{action "hideMenu"}}>
        <!-- header section start-->
        <!-- header section end-->

        <!--body wrapper start-->
        <div class="wrapper">
            <div class="row">
                <div  {{action "toggleMenu"}}>
                {{course-bar courses=model savedOrder=courseOrder modal="modal"}}
                </div>
                <div class="col-lg-3">
                    <!-- place holder div -->
                </div>
                <div class="col-lg-9">
                    <ul class="courses">
                        {{outlet 'main'}}
                    </ul>
                </div>
            </div>
        </div>
        <!--body wrapper end-->
    </div>
    <!-- main content end-->
</section>
