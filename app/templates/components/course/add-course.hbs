{{#bootstrap-modal type="add-course" class=class}}
    {{log "user" user}}
    <div class="modal-header">
        <button type="button" {{action 'close'}} class="close">Ã—</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="form-group verticallyCenter">
            <p>
                {{yield}}
            </p>
            {{input type="text" enter="save" value=course_name placeholder="Class Name" maxlength="20" class="form-control focus"}}
        </div>
    </div>
    <div class="modal-footer">
        {{#if completion}}
            {{welcome-progress stage=1}}
        {{/if}}
        <button {{action 'save'}} class="btn btn-primary" >{{saveText}}</button>
    </div>
{{/bootstrap-modal}}