{{#bootstrap-modal type="assignment-recurring" }}
    <div class="modal-header">
        <button type="button" {{action 'close'}} class="close">Ã—</button>
        <h4 class="modal-title">Repeating {{assignment_name}}</h4>
    </div>
    <div class="modal-body">
        <div class="form-group assignment-modal recurring">
            <div class="col-sm-7">
                <div class="row">
                    <div class="col-sm-4 col-xs-8 timePicker">
                        {{#if timepickerEnabled}}
                            {{bootstrap-timepicker value=display_time}}
                        {{else}}
                            <button {{action 'toggleTime'}} class="btn btn-default" type="button">
                                Time <small>(optional)</small>
                            </button>
                        {{/if}}
                    </div>
                    <div class="col-sm-3">
                        {{switchery-checkbox checked=timepickerEnabled}}
                    </div>
                    <div class="col-sm-5">
                        {{assignment/part/type-dropdown selection=assignment_name}}
                    </div>
                </div>
                {{textarea id="assignmentDescription" value=description class="pull-left form-control" placeholder="Type description here" }}
            </div>
            <div class="col-sm-5">
                <div class="days no-select">
                    Repeat on:
                    <div class="first">
                        <span {{action 'toggle' 'sunday'}} class="day {{sunday}}">
                            Sun
                        </span>
                        <span {{action 'toggle' 'monday'}} class="day {{monday}}">
                            Mon
                        </span>
                        <span {{action 'toggle' 'tuesday'}} class="day {{tuesday}}">
                            Tues
                        </span>
                        <span {{action 'toggle' 'wednesday'}} class="day {{wednesday}}">
                            Wed
                        </span>
                    </div>
                    <div class="second">
                        <span {{action 'toggle' 'thursday'}} class="day {{thursday}}">
                            Thurs
                        </span>
                        <span {{action 'toggle' 'friday'}} class="day {{friday}}">
                            Fri
                        </span>
                        <span {{action 'toggle' 'saturday'}} class="day {{saturday}}">
                            Sat
                        </span>
                    </div>
                </div>
                <div class="days">
                    <div>
                        Start Date:
                        {{bootstrap-datepicker format="M d yyyy" autoclose=true class="date" value=startDateRaw startDate=today}}
                    </div>
                   <div>
                       <!--End After {input type='number' max=20 class="weeks"}} Weeks-->
                   </div>
                    <div>
                        End Date {{bootstrap-datepicker format="M d yyyy" autoclose=true class="date" value=endDateRaw startDate=startDateRaw}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{# if dayList}}
            Every {{display-list dayList}} until {{endDate}} &emsp;
            {{#if saving}}
                <button class="btn bnt-primary disabled" type="button">Saving...</button>
            {{else}}
                <button class="btn btn-primary" type="button" {{action 'save'}} >Save</button>
            {{/if}}
        {{else}}
            <button class="btn bnt-primary disabled" type="button">Choose a day</button>
        {{/if}}

    </div>
{{/bootstrap-modal}}