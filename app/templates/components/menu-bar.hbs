<div class="header-section">
    <div class="pull-left">
        <img id="logo" src="/assets/img/whatsdue-logo.png"/>
        <img {{action "toggleMenu"}} id="menu-toggle" src="/assets/img/menu.png"/>
        <span>
            WhatsDue Teacher Dashboard for {{displayName}}
        </span>
    </div>

    <div class="menu-right ">
        <ul class="notification-menu">
            <li id="invite-users">
                {{#link-to 'secure.message.email.invite' class="btn btn-default dropdown-toggle"}}
                    Invite Subscribers {{fa-icon icon="users"}}
                {{/link-to}}
            </li>
            <li id="user-dropdown">
                <!--TODO: Make this work with actions-->
                <a class="btn btn-default dropdown-toggle">
                    {{fa-icon icon="info-circle"}}
                    {{user.first_name}}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                    <li><a href="mailto:aaron@whatsdueapp.com"><i class="fa fa-envelope"></i>Email Aaron</a></li>
                    <li><a href="skype:aarontaylor613?call"><i class="fa fa-phone"></i>Skype Aaron</a></li>
                    <li><a {{action 'logout'}}><i class="fa fa-sign-out"></i> Log Out</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>